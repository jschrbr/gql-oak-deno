{
  "$schema": "https://deno.land/x/denon/schema.json",
  "allow": {
    "read": "./",
    "env": "",
    "net": ""
  },
  "scripts": {
    "start": {
      "cmd": "deno run ./server/main.ts",
      "desc": "run my app.ts file",
      "tsconfig": {
        "compilerOptions": {
          "allowJs": true,
          "emitDecoratorMetadata": true,
          "experimentalDecorators": true,
          "module": "esnext",
          "target": "es2017"
        }
      }
    }
  }
}
